<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/date_time_dialog_margin"
        android:layout_marginTop="@dimen/date_time_dialog_margin"
        android:text="@string/dialog_select_day" />

    <Spinner
        android:id="@+id/daySpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/date_time_dialog_margin" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/daySpinner"
        android:layout_below="@+id/daySpinner"
        android:layout_marginTop="20dp"
        android:text="@string/dialog_select_time" />

    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/date_time_dialog_margin"
        android:layout_marginBottom="@dimen/date_time_dialog_margin" />

</RelativeLayout>