<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sarthak.notes.activities.HomeScreenActivity"
    tools:showIn="@layout/app_bar_home">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/textViewNotes"
            android:text="@string/take_a_note"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_bottom_bar_size"
            android:layout_toStartOf="@+id/button_checkList" />

        <ImageButton
            android:id="@+id/button_checkList"
            android:src="@drawable/checklist"
            android:layout_width="@dimen/home_bottom_bar_size"
            android:layout_height="@dimen/home_bottom_bar_size"
            android:scaleType="fitXY"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
